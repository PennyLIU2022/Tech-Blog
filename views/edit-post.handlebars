<h2 class="card-header">Edit Post</h2>
    <form class="card-body edit-post-form">
        <div class="form-row">
        <label for="post-title" class="form-label">Title</label>
        <input name="post-title" type="text" value="{{blog.title}}" class="form-input form-control"/>
        </div>

        <div class="form-row">
        <label class="form-label" for="content">Content</label>
        <input name="content" type="text" value="{{blog.content}}" class="form-input form-control"/>
        </div>
         {{!-- <input name="id" type="hidden" value="{{b id}}" class="form-input form-control"/> --}}
        <button type="submit" class="btn">Update Post</button>
        <button type="button" class="delete-post-btn btn">Delete Post</button>
    </form>

<script src="/js/edit-blog.js"></script>
<script src="/js/delete-blog.js"></script> 